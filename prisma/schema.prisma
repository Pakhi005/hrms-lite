generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Employee {
  idString    String       @id @default(uuid())
  employeeId  String       @unique
  name        String
  email       String       @unique
  department  String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  Attendance  Attendance[]
}

model Attendance {
  idString    String    @id @default(uuid())
  employeeId  String
  date        DateTime
  status      String    // PRESENT, ABSENT
  employee    Employee  @relation(fields: [employeeId], references: [idString], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([employeeId, date])
}
